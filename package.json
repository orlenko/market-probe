{
  "name": "market-probe",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:api": "node scripts/test-api.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "setup:local": "docker-compose up -d && sleep 5 && npm run db:migrate && npm run db:seed",
    "setup:clean": "docker-compose down -v && npm run setup:local"
  },
  "dependencies": {
    "@prisma/client": "^6.8.2",
    "crypto-js": "^4.2.0",
    "next": "14.0.4",
    "nodemailer": "^7.0.3",
    "prisma": "^6.8.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.25.48"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/crypto-js": "^4.2.2",
    "@types/jest": "^29.5.0",
    "@types/node": "^20",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.21",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.1.0",
    "tsx": "^4.19.4",
    "typescript": "^5"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
